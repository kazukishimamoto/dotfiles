[user]
	name = Kazuki Shimamoto
	email = jakky0529@gmail.com
[core]
	editor = vim -c \"set fenc=utf-8\"
	excludesfile = /Users/kazuki.shimamoto/.gitignore_global
[pull]
	rebase = true
[alias]
	pl = pull
	ps = push
	psu = push -u origin HEAD
	rv = revert
	rb = rebase
	st = status --short --branch
	# reset
	r = reset --soft HEAD
	# stash
	s = stash
	su = stash -u
	sp = stash pop
	sl = stash list
	# add
	a = "!git diff --name-only | fzf --preview 'git diff --color {}' | xargs git add"
	aa = add -A
	ap = add -p
	# fetch
	fp = fetch --prune
	# branch
	b = branch
	ba = branch --all
	bd = "!git branch | tr -d ' ' | fzf --preview 'git show --color {}' | xargs git branch -D"
	# diff
	d = diff
	# ds = diff --stat
	ds = diff --staged
	# commit
	c = commit
	cm = commit -m
	# ca = commit --amend
	ca = commit -am
	# log
	l = log
	ol = log --oneline
	# switch
	sw = switch
	nb = switch -c
	ch = "!git branch | tr -d ' ' | fzf --preview 'git show --color {}' | xargs git switch"
	# restore
	rs = restore
	rsa = restore .
	rss = restore --staged
	rssa = restore --staged .
	# merge
	m = merge
	# grep
	g = --line-number grep
	gu = grep --untracked --line-number

[init]
	defaultBranch = main

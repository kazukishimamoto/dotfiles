#!/bin/sh

set -e

echo "Start setup ..."
cd "$HOME"

echo "Clone dotfiles ..."
if [ ! -d ~/dotfiles ]; then
  git clone https://github.com/kazukishimamoto/dotfiles.git
fi

echo "Install Homebrew ..."
if [ ! -f /usr/local/bin/brew ]; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

echo "Run brew doctor ..."
which brew >/dev/null 2>&1 && brew doctor

echo "Run brew update ..."
brew update

echo "Ok. run brew upgrade ..."
brew upgrade

echo "Install Command for Brewfile ..."
brew bundle -v --file=~/dotfiles/Brewfile

brew cleanup

if [ ! -d ~/.config ]; then
  mkdir ~/.config
fi

# シンボリックリンクを作成する
# git
ln -sf ~/Workspace/dotfiles/packages/git/.gitconfig ~/.gitconfig
ln -sf ~/Workspace/dotfiles/packages/git/.gitignore_global ~/.gitignore_global
ln -sf ~/Workspace/dotfiles/packages/git/.git_template ~/.git_template
ln -sf ~/Workspace/dotfiles/packages/git/.git-bin ~/.git-bin

# starship
ln -sf ~/Workspace/dotfiles/packages/starship/.config/starship.toml ~/.config/starship.toml

# zsh
ln -sf ~/Workspace/dotfiles/packages/zsh/.zshenv ~/.zshenv
ln -sf ~/Workspace/dotfiles/packages/zsh/.zshrc ~/.zshrc
ln -s ~/Workspace/dotfiles/packages/zsh/.zshrc.d ~/.zshrc.d

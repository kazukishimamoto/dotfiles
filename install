#!/bin/sh

set -e

echo "Start setup ..."
cd $HOME

echo "Install prezto ..."
if [ ! -d ~/.zprezto ]; then
  git clone --recursive https://github.com/sorin-ionescu/prezto.git "${ZDOTDIR:-$HOME}/.zprezto"

  setopt EXTENDED_GLOB
  # for rcfile in "${ZDOTDIR:-$HOME}"/.zprezto/runcoms/^README.md(.N); do
  #  ln -s "$rcfile" "${ZDOTDIR:-$HOME}/.${rcfile:t}"
  # done
fi

echo "Clone dotfiles ..."
if [ ! -d ~/dotfiles ]; then
  git clone git@github.com:kazukishimamoto/dotfiles.git
fi

echo "Install Homebrew ..."
if [ ! -f /usr/local/bin/brew ]; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

echo "Run brew doctor ..."
which brew >/dev/null 2>&1 && brew doctor

echo "Run brew update ..."
brew update

echo "Ok. run brew upgrade ..."
brew upgrade

echo "Install Command for Brewfile ..."
brew bundle -v --file=~/dotfiles/Brewfile

brew cleanup

if [ ! -d ~/.config ]; then
  mkdir ~/.config
fi

# シンボリックリンクを作成するファイルは事前に削除する必要がある
## remove vscode settings
for file in settings.json keybindings.json; do
  rm -rf "${VSCODE_SETTING_DIR}/${file}"
done

## remove dotfiles
for file in ~/.zshrc ~/.gitconfig; do
  rm -rf "${file}"
done

# シンボリックリンクを作成する
# git
ln -s ~/dotfiles/packages/git/.gitconfig ~/.gitconfig
ln -s ~/dotfiles/packages/git/.gitignore_global ~/.gitignore_global
ln -s ~/dotfiles/packages/git/.git_template ~/.git_template

# nvim
ln -s ~/dotfiles/packages/nvim/.config/nvim/init.vim ~/.config/nvim/init.vim

# prezto
ln -s ~/dotfiles/packages/zprezto/.zpreztorc ~/.zpreztorc

# starship
ln -s ~/dotfiles/packages/starship/.config/starship.toml ~/.config/starship.toml

# tmux
ln -s ~/dotfiles/packages/tmux/.tmux.conf ~/.tmux.conf


# zsh
ln -s ~/dotfiles/packages/zsh/.zshrc ~/.zshrc
ln -s ~/dotfiles/packages/zsh/.zprofile ~/.zprofile
ln -s ~/dotfiles/packages/zsh/.zshenv ~/.zshenv
ln -s ~/dotfiles/packages/zsh/.zlogin ~/.zlogin
ln -s ~/dotfiles/packages/zsh/.zlogout ~/.zlogout
